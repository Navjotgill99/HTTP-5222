extends common/layout

block layout-content
  div.content
    h1.page-title Edit menu link
    form(method="post", action="/admin/menu/edit/submit")
      input(type="hidden", name="linkId", value=editLink._id)
      div
        label(for="weight") Weight:
        input(type="number", id="weight", name="weight", value=editLink.weight)
      div
        label(for="path") Path:
        input(type="text", id="path", name="path", value=editLink.path)
      div
        label(for="name") Link name:
        input(type="text", id="name", name="name", value=editLink.name)
      button(type="submit") Update link